<Window x:Class="ForumProj.Windows.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ForumProj.Windows"
        mc:Ignorable="d"
        Height="Auto" 
        Width="800" 
        MinWidth="600"
        Background="#E5E9F0">
    <ScrollViewer>
        <Grid Background="#D8DEE9"
              MaxWidth="960">
            <Border 
                BorderBrush="#2E3440"
                BorderThickness="1"
                Padding="10"/>
            <TextBlock x:Name="CategoryInfo"
                       HorizontalAlignment="Center"
                       Margin="10,10"
                       Foreground="#2E3440"
                       FontSize="20"
                       FontWeight="Heavy"
                       FontStyle="Italic"/>
            <Grid Margin="50,50" Background="Transparent">
                <StackPanel x:Name="categoryQuestionsStackPanel" 
                            Orientation="Vertical" Background="Transparent">
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
